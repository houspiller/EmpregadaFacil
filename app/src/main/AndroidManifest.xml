            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="br.com.iesb.posgraduacao.activity.MainActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="br.com.iesb.posgraduacao.activity.CalculaSalarioActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="br.com.iesb.posgraduacao.activity.CalcularFeriasActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="br.com.iesb.posgraduacao.activity.CalcularRecisaoContratoActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity android:name="br.com.iesb.posgraduacao.activity.Calcular13Activity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
